<%= render 'layouts/error', :object => @reservation %>

<%=form_for @reservation do |f| %>

  <div class="form_group">
    <%= f.hidden_field :property_id, :value => @property.id %>
  </div>

  <div class="form_group">
    <%= f.label :check_in, "Arrival date" %><br />
    <%= f.date_field :check_in %>
  </div>

  <div class="form_group">
    <%= f.label :check_out, "Departure date" %><br />
    <%= f.date_field :check_out %>
  </div>

  <div class="form-group">
    <%= f.label :guest_number, "Number of guests?" %><br />
    <%= f.text_field :guest_number %>
  </div>

  <br>
<%= f.submit(:class => "btn btn-primary") %>
<% end %>
